    int nDecimal;
    printf("Digite o numero para ser convertido; ");
    scanf("%d", &nDecimal);
    
    if(escolha == 1){
      binario(nDecimal);
    } else if(escolha == 2){
      
    }
  }
  if(x==2){
    int nDecimal;
    printf("Digite o numero para ser convertido; ");
